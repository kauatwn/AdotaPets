<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

        <ImageView

            android:id="@+id/imgLogo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cat" />

        <EditText
            android:id="@+id/edtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_marginBottom="20dp"
            android:drawableEnd="@drawable/baseline_person"
            android:hint="Insira o nome do usuÃ¡rio"
            android:padding="15dp" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUser"
            android:drawableEnd="@drawable/baseline_lock"
            android:hint="Insira a senha do usuario"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/edtSenha"
            >

            <Button
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/btnEntrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtSenha"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Entrar" />

            <Button

                android:layout_weight="1"
                android:id="@+id/btnSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtSenha"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/btnEntrar"
                android:text="Sair" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>